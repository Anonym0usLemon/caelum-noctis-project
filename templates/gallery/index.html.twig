{% extends 'base.html.twig' %}

{% block title %}Hello GalleryController!{% endblock %}


{% block body %}

<section class="gallery-section margin-inline">
    
    <div class="button-group">
        <a href="{{ path('gallery_add') }}" class="button add-to-gallery">Add Item</a>
    </div>

    <div class="image-group">
        {% for image in galleryItems %}
            <div class="item">
                <img src="{{ asset('images/' ~ image.filename)  }}" alt="">
                <h2>{{ image.title }}</h2>
            </div>
        {% endfor %}
    </div>
</section>
{% endblock %}
